<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cars and Owners</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <h1 class="text-center mb-4">Cars and Owners</h1>
        <form action="/cars/add" method="POST" class="mb-4">
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="brand" class="form-control" placeholder="Brand" required>
                </div>
                <div class="col-md-3">
                    <input type="text" name="model" class="form-control" placeholder="Model" required>
                </div>
                <div class="col-md-2">
                    <input type="number" name="year" class="form-control" placeholder="Year" required>
                </div>
                <div class="col-md-2">
                    <input type="text" name="ownerName" class="form-control" placeholder="Owner Name" required>
                </div>
                <div class="col-md-2">
                    <input type="number" name="ownerAge" class="form-control" placeholder="Owner Age" required>
                </div>
            </div>
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">Add Car</button>
            </div>
        </form>

        <ul class="list-group">
            <% cars.forEach(car => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= car.brand %> <%= car.model %></strong> (<%= car.year %>) - Owner: <%= car.owner.name %> (<%= car.owner.age %>)
                    </div>
                    <div>
                        <form action="/cars/edit/<%= car._id %>" method="POST" class="d-inline">
                            <input type="text" name="brand" value="<%= car.brand %>" class="form-control d-inline w-auto" required>
                            <input type="text" name="model" value="<%= car.model %>" class="form-control d-inline w-auto" required>
                            <input type="number" name="year" value="<%= car.year %>" class="form-control d-inline w-auto" required>
                            <input type="text" name="ownerName" value="<%= car.owner.name %>" class="form-control d-inline w-auto" required>
                            <input type="number" name="ownerAge" value="<%= car.owner.age %>" class="form-control d-inline w-auto" required>
                            <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                        </form>
                        <form action="/cars/delete/<%= car._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>